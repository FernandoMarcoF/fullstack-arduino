{
    "parser": "@typescript-eslint/parser",
    "extends": ["plugin:@typescript-eslint/recommended"],
    "parserOptions": { "ecmaVersion": 2018, "sourceType": "module" },
    "rules": {
      "quotes": ["warn", "single"], // error en comillas dobles
      "semi": ["warn", "always"], // error si olvidamos ; al final
      "max-len": ["error", { "code": 100, "ignoreComments": true }], // máximo de 100 caracteres por línea. Podría haber más reglas (no premitir variables any...)
      "@typescript-eslint/no-unused-vars" : "off"
    }
  }
  